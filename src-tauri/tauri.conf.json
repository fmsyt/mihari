{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "mihari",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "setAlwaysOnTop": true,
        "setDecorations": true,
        "startDragging": true
      },
      "fs": {
        "all": false,
        "writeFile": true,
        "readFile": true,
        "scope": [
          "$APPLOCALDATA/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "mihari.yotta-rc.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": null,
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "wix": {
          "language": [
            "en-US",
            "ja-JP"
          ]
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "title": "mihari",
        "width": 200,
        "height": 180,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "decorations": false
      },
      {
        "label": "config",
        "title": "Config - mihari",
        "url": "config.html",
        "visible": false
      }
    ],
    "systemTray": {
      "iconAsTemplate": true,
      "iconPath": "icons/128x128.png"
    }
  }
}
