{
  "productName": "mihari",
  "version": "1.0.2",
  "identifier": "mihari.yotta-rc.dev",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:17011",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "nsis": null,
      "tsp": false,
      "webviewFixedRuntimePath": null,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": [
          "en-US",
          "ja-JP"
        ]
      },
      "certificateThumbprint": "1B1A97B87C6059CB8B58A007D1FFDC00D4F61811",
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.comodoca.com"
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "title": "mihari",
        "width": 200,
        "height": 224,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "decorations": false,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --disable-gpu"
      }
    ],
    "trayIcon": {
      "iconAsTemplate": true,
      "iconPath": "icons/128x128.png"
    }
  },
  "plugins": {}
}
